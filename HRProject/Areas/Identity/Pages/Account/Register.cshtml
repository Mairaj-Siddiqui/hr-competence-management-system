@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    /* 1. Colorful Full Page Background Gradient */
    .register-page-bg {
        /* Set minimum height to 100% of the viewport height */
        min-height: 100vh;
        /* Use a subtle, modern gradient background */
        background: linear-gradient(135deg, #74b9ff 0%, #00d2d3 100%);
        /* Center content vertically using Flexbox */
        display: flex;
        align-items: center;
        padding-top: 20px; /* Add some top/bottom padding for smaller screens */
        padding-bottom: 20px;
    }

    /* 2. Style for the main form card */
    .register-card {
        background-color: #ffffff; /* Ensure the card is white for contrast */
        border-radius: 1rem;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2); /* Stronger shadow */
    }
</style>

<div class="register-page-bg">
    <div class="container">
        <div class="row justify-content-center">

            <div class="col-lg-5 col-md-8">

                <div class="register-card p-5">
                    <h1 class="text-center mb-5" style="color: #4a90e2;">👋 @ViewData["Title"]</h1>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h2 class="h3 text-center mb-4 text-primary-emphasis">Create your new account.</h2>
                        <hr class="mb-4" />

                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.FullName" class="form-label"></label>
                            <input asp-for="Input.FullName" class="form-control" />
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>


                        

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        

                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-info text-white fw-bold">🚀 Register Account</button>
                    </form>

                    <section class="mt-4 pt-3 border-top">

                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) > 0)
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal text-center">
                                    <p>
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="btn btn-outline-primary me-2 mb-2 fw-bold" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                                @provider.DisplayName
                                            </button>
                                        }
                                    </p>
                                </form>
                            }
                            else
                            {
                               
                            }
                        }
                    </section>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}