@{
    ViewData["Title"] = "Create Role";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    .page-bg {
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        position: relative;
        overflow: hidden;
    }

        .page-bg::before {
            content: '';
            position: absolute;
            top: -10%;
            right: -5%;
            width: 500px;
            height: 500px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
        }

        .page-bg::after {
            content: '';
            position: absolute;
            bottom: -15%;
            left: -5%;
            width: 600px;
            height: 600px;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 50%;
        }

    .role-card {
        background: white;
        border-radius: 30px;
        padding: 3rem 2.5rem;
        box-shadow: 0 30px 60px rgba(0, 0, 0, 0.2);
        max-width: 550px;
        width: 100%;
        position: relative;
        z-index: 1;
    }

    .role-header {
        text-align: center;
        margin-bottom: 2.5rem;
    }

    .role-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

        .role-icon i {
            font-size: 2.5rem;
            color: white;
        }

    .role-title {
        font-size: 2rem;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 0.5rem;
    }

    .role-subtitle {
        color: #718096;
        font-size: 1.05rem;
        margin: 0;
    }

    .divider {
        height: 2px;
        background: linear-gradient(90deg, transparent 0%, #e2e8f0 50%, transparent 100%);
        border: none;
        margin: 2rem 0;
    }

    .form-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: #718096;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .form-label i {
            color: #667eea;
            font-size: 1rem;
        }

    .input-wrapper {
        position: relative;
        margin-bottom: 1.75rem;
    }

    .form-control {
        border: 2px solid #e2e8f0;
        border-radius: 14px;
        padding: 1rem 1rem 1rem 3.5rem;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #fafbff;
    }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.15);
            background: white;
        }

    .input-icon {
        position: absolute;
        left: 1.25rem;
        top: 50%;
        transform: translateY(-50%);
        color: #667eea;
        font-size: 1.2rem;
        pointer-events: none;
    }

    .role-examples {
        background: linear-gradient(135deg, #f8f9fe 0%, #fdfbff 100%);
        border-radius: 12px;
        padding: 1rem 1.25rem;
        margin-top: 0.75rem;
        border: 1px solid #e9ecef;
    }

    .role-examples-label {
        font-size: 0.75rem;
        color: #718096;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .role-examples-label i {
            color: #667eea;
        }

    .role-examples-list {
        font-size: 0.9rem;
        color: #4a5568;
        line-height: 1.8;
        margin: 0;
    }

    .example-role {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        background: white;
        border-radius: 6px;
        margin-right: 0.5rem;
        margin-bottom: 0.25rem;
        font-weight: 500;
        border: 1px solid #e2e8f0;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 1rem 2rem;
        border-radius: 14px;
        font-weight: 600;
        font-size: 1.05rem;
        transition: all 0.3s ease;
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
        width: 100%;
        margin-top: 1.5rem;
    }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 30px rgba(102, 126, 234, 0.4);
        }

        .btn-primary i {
            margin-right: 0.5rem;
        }

    .alert {
        border-radius: 14px;
        border: none;
        padding: 1.25rem;
        margin-top: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-weight: 500;
    }

    .alert-success {
        background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
        color: #065f46;
    }

    .alert i {
        font-size: 1.5rem;
    }

    .back-link {
        text-align: center;
        margin-top: 1.5rem;
    }

        .back-link a {
            color: #718096;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

            .back-link a:hover {
                color: #667eea;
            }

    .info-card {
        background: linear-gradient(135deg, #fef3c7 0%, #fde68a 50%);
        border-radius: 12px;
        padding: 1rem 1.25rem;
        margin-top: 1.5rem;
        border: 1px solid #fbbf24;
        display: flex;
        align-items: start;
        gap: 0.75rem;
    }

        .info-card i {
            color: #92400e;
            font-size: 1.3rem;
            flex-shrink: 0;
            margin-top: 0.1rem;
        }

    .info-card-text {
        font-size: 0.9rem;
        color: #78350f;
        line-height: 1.6;
        margin: 0;
    }
</style>

<div class="page-bg">
    <div class="role-card">
        <div class="role-header">
            <div class="role-icon">
                <i class="bi bi-person-plus-fill"></i>
            </div>
            <h2 class="role-title">Create New Role</h2>
            <p class="role-subtitle">Define a new role for your organization</p>
        </div>

        <hr class="divider" />

        <form method="post">
            <div class="input-wrapper">
                <label class="form-label">
                    <i class="bi bi-tag"></i>
                    Role Name
                </label>
                <i class="bi bi-award-fill input-icon"></i>
                <input name="roleName"
                       class="form-control"
                       placeholder="Enter role name"
                       required />

                <div class="role-examples">
                    <div class="role-examples-label">
                        <i class="bi bi-lightbulb-fill"></i>
                        Example Roles
                    </div>
                    <div class="role-examples-list">
                        <span class="example-role">Admin</span>
                        <span class="example-role">Manager</span>
                        <span class="example-role">HR</span>
                        <span class="example-role">Developer</span>
                        <span class="example-role">Designer</span>
                        <span class="example-role">Employee</span>
                    </div>
                </div>
            </div>

            <div class="info-card">
                <i class="bi bi-info-circle-fill"></i>
                <p class="info-card-text">
                    <strong>Note:</strong> Role names should be descriptive and follow your organization's naming conventions. Once created, roles can be assigned to users to grant specific permissions.
                </p>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i>
                Create Role
            </button>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-success">
                <i class="bi bi-check-circle-fill"></i>
                <span>@ViewBag.Message</span>
            </div>
        }

        <div class="back-link">
            <a href="/">
                <i class="bi bi-arrow-left"></i>
                <span>Back to Dashboard</span>
            </a>
        </div>
    </div>
</div>