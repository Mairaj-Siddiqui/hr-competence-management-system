@using Microsoft.AspNetCore.Identity
@using HRProject.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HR Project</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HRProject.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container-xxl">

                <a class="navbar-brand fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">
                    HR Project
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Home
                            </a>
                        </li>

                        @if (User.IsInRole("Admin") || User.IsInRole("HR") || User.IsInRole("Team Leader"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="TeamLeader" asp-action="Index">
                                    <i class="bi bi-people"></i> Team Leader
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin") || User.IsInRole("HR"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="HR" asp-action="Index">
                                    <i class="bi bi-person-workspace"></i> HR
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-speedometer2"></i> Admin Dashboard
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="UserCompetences" asp-action="Assign">
                                    <i class="bi bi-plus-circle"></i> Assign Competence
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Roles" asp-action="Assign">
                                    <i class="bi bi-person-check me-1"></i> Assign Role
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Roles" asp-action="Create">
                                    <i class="bi bi-plus-circle"></i> Add Role
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin") || User.IsInRole("Project Manager") || User.IsInRole("HR"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ProjectManager" asp-action="Index">
                                    <i class="bi bi-kanban"></i> Project Manager
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin") || User.IsInRole("HR"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Competences" asp-action="Index">
                                    <i class="bi bi-list-check"></i> Competences
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin") || User.IsInRole("HR") || User.IsInRole("Employee"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Employee" asp-action="Index">
                                    <i class="bi bi-person-badge"></i> Employee
                                </a>
                            </li>
                        }

                        @if (User.Identity?.IsAuthenticated == true &&
                                                User.Claims.Any(c => c.Type == System.Security.Claims.ClaimTypes.Role))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="UserCompetences" asp-action="AllUserCompetences">
                                    <i class="bi bi-person-circle"></i> Users Profiles
                                </a>
                            </li>
                        }

                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1">
        
            @RenderBody()
        


    </main>

    <footer class="mt-auto py-3 bg-dark text-light">
        <div class="container-xxl">
            <div class="row align-items-center gy-2 text-center text-md-start small">
                <div class="col-12 col-md-6">
                    © 2025 <strong>HR Project</strong> — Lia 1
                </div>

                <div class="col-12 col-md-6 text-md-end">
                    <div>Project Manager: <strong>Tomas Forsblom</strong></div>
                    <a href="mailto:tomas.forsblom@superiorskills.se"
                       class="text-info text-decoration-none">
                        tomas.forsblom@superiorskills.se
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
