@using Microsoft.AspNetCore.Identity
@using HRProject.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HR Project</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HRProject.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    HR Project
                </a>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="TeamLeader" asp-action="Index">
                                <i class="bi bi-people"></i> Team Leader
                            </a>
                        </li>

                        @* Admin-only items *@
                      @*   @if (User.IsInRole("Admin")) *@
                        
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Roles" asp-action="Create">
                                    <i class="bi bi-plus-circle"></i> Add Role
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="HR" asp-action="Index">
                                    <i class="bi bi-person-workspace"></i> HR
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-area=""
                                   asp-controller="Roles"
                                   asp-action="Assign">
                                    Assign Role
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="MatchSettings" asp-action="Edit">
                                    <i class="bi bi-sliders"></i> Match Settings
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-speedometer2"></i> Admin Dashboard
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="ProjectManager" asp-action="Index">
                                    <i class="bi bi-kanban"></i> Project Manager
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Competences" asp-action="Index">
                                    <i class="bi bi-list-check"></i> Competences
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="UserCompetences" asp-action="Assign">
                                    <i class="bi bi-plus-circle"></i> Assign Competence
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Employee" asp-action="Index">
                                    <i class="bi bi-person-badge"></i> Employee
                                </a>
                            </li>

                            <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="UserCompetences" asp-action="AllUserCompetences">
                                    <i class="bi bi-person-circle"></i> Users Profiles
                                </a>
                            </li>
                        

                        @* Project & Requirements (visible to Admin, HR, PM, PL) *@
                        @if (
                                                SignInManager.IsSignedIn(User) &&
                                                (
                                                User.IsInRole("Admin") ||
                                                User.IsInRole("HR") ||
                                                User.IsInRole("ProjectManager") ||
                                                User.IsInRole("ProjectLeader")
                                                )
                                                )
                        {
                            @* Reserved for future links *@
                        }

                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - HRProject -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
