@* This view uses the HRDashboardViewModel we created earlier *@
@model HRProject.Models.HRDashboardViewModel

@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container mt-4">
    @* Page heading *@
    <h1 class="mb-2">HR Dashboard</h1>

    @* === NEW: Skill Gap Analysis button (HR strategic view) === *@
    <a asp-controller="HR"
       asp-action="SkillGap"
       class="btn btn-outline-primary mb-4">
        Skill Gap Analysis
    </a>

    @* Row of summary cards for the main KPIs *@
    <div class="row">

        @* 1) Total Employees -> Employee list *@
        <div class="col-md-3 mb-3">
            <a asp-controller="Employee" asp-action="Index" class="text-decoration-none">
                <div class="card text-bg-primary h-100 shadow-sm" style="cursor:pointer;">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayNameFor(m => m.TotalEmployees)</h5>
                        <p class="card-text fs-3 fw-bold">@Model.TotalEmployees</p>
                        <small class="opacity-75">Click to view employees</small>
                    </div>
                </div>
            </a>
        </div>

        @* 2) Total Competences -> Competence catalog *@
        <div class="col-md-3 mb-3">
            <a asp-controller="Competences" asp-action="Index" class="text-decoration-none">
                <div class="card text-bg-success h-100 shadow-sm" style="cursor:pointer;">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayNameFor(m => m.TotalCompetences)</h5>
                        <p class="card-text fs-3 fw-bold">@Model.TotalCompetences</p>
                        <small class="opacity-75">Click to manage competences</small>
                    </div>
                </div>
            </a>
        </div>

        @* 3) Users With Competences -> All user competences *@
        <div class="col-md-3 mb-3">
            <a asp-controller="UserCompetences" asp-action="AllUserCompetences" class="text-decoration-none">
                <div class="card text-bg-info h-100 shadow-sm" style="cursor:pointer;">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayNameFor(m => m.UsersWithCompetences)</h5>
                        <p class="card-text fs-3 fw-bold">@Model.UsersWithCompetences</p>
                        <small class="opacity-75">Click to view competence overview</small>
                    </div>
                </div>
            </a>
        </div>

        @* 4) Users Without Competences -> Filtered list *@
        <div class="col-md-3 mb-3">
            <a asp-controller="HR" asp-action="EmployeesWithoutCompetences" class="text-decoration-none">
                <div class="card text-bg-warning h-100 shadow-sm" style="cursor:pointer;">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayNameFor(m => m.UsersWithoutCompetences)</h5>
                        <p class="card-text fs-3 fw-bold">@Model.UsersWithoutCompetences</p>
                        <small class="opacity-75">Click to find missing profiles</small>
                    </div>
                </div>
            </a>
        </div>

    </div>

    @* Section for Top Competences *@
    <div class="row mt-4">
        <div class="col-md-6">
            <h3>Top Competences</h3>

            @if (Model.TopCompetences != null && Model.TopCompetences.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Competence</th>
                            <th>Number of Employees</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TopCompetences)
                        {
                            <tr>
                                <td>
                                    <a asp-controller="HR"
                                       asp-action="CompetenceUsers"
                                       asp-route-competenceName="@item.CompetenceName">
                                        @item.CompetenceName
                                    </a>
                                </td>
                                <td>@item.UserCount</td>
                            </tr>
                        }
                    </tbody>

                </table>
            }
            else
            {
                <p>No competence data available yet.</p>
            }
        </div>
    </div>
</div>
