@model IEnumerable<HRProject.Models.ProjectMatchResultViewModel>

@{
    ViewData["Title"] = "Project Matches";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container mt-4 mb-5">
    <h2 class="mb-3">
        <i class="bi bi-people-fill me-2"></i>
        Top Matches for: @ViewBag.ProjectName
    </h2>

    <table class="table table-hover table-striped">
        <thead class="table-light">
            <tr>
                <th>User</th>
                <th>Email</th>
                <th>Competence %</th>
                <th>Experience %</th>
                <th>Availability %</th>
                <th>Overall %</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.UserName</td>
                    <td>@m.UserEmail</td>
                    <td>@m.CompetenceMatchPercent%</td>
                    <td>@m.ExperienceMatchPercent%</td>
                    <td>@m.AvailabilityMatchPercent%</td>
                    <td class="fw-bold">@m.OverallMatchPercent.ToString("0.0")%</td>
                </tr>
            }
        </tbody>
    </table>
</div>
