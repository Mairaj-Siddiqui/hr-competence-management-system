@model HRProject.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    .dash-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #fff;
        padding: 2.5rem 2rem;
        border-radius: 0 0 25px 25px;
        margin-bottom: 2rem;
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }

        .dash-header h2 {
            font-weight: 700;
            margin-bottom: .25rem;
        }

        .dash-header p {
            opacity: 0.9;
            margin: 0;
        }

    .stat-card {
        border-radius: 20px;
        border: none;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        transition: transform .2s ease, box-shadow .2s ease;
    }

        .stat-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 14px 35px rgba(0,0,0,0.12);
        }

    .stat-icon {
        font-size: 2rem;
        opacity: .85;
    }

    .stat-label {
        text-transform: uppercase;
        font-size: .75rem;
        letter-spacing: .08em;
        color: #6c757d;
        font-weight: 600;
    }

    .stat-value {
        font-size: 1.8rem;
        font-weight: 700;
    }
</style>

<div class="dash-header">
    <h2><i class="bi bi-speedometer2 me-2"></i> Admin Dashboard</h2>
    <p>Quick overview of your HR competence and project data.</p>
</div>

<div class="container mb-5">
    <div class="row g-4">

        <div class="col-md-4">
            <div class="card stat-card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-label">Total Users</div>
                        <div class="stat-value text-primary">@Model.TotalUsers</div>
                    </div>
                    <i class="bi bi-people-fill stat-icon text-primary"></i>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card stat-card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-label">Competences</div>
                        <div class="stat-value text-success">@Model.TotalCompetences</div>
                    </div>
                    <i class="bi bi-lightbulb-fill stat-icon text-success"></i>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card stat-card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-label">User–Competence Links</div>
                        <div class="stat-value text-info">@Model.TotalUserCompetences</div>
                    </div>
                    <i class="bi bi-diagram-3 stat-icon text-info"></i>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card stat-card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-label">Projects</div>
                        <div class="stat-value text-warning">@Model.TotalProjects</div>
                    </div>
                    <i class="bi bi-folder-fill stat-icon text-warning"></i>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card stat-card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-label">Project Requirements</div>
                        <div class="stat-value text-danger">@Model.TotalProjectRequirements</div>
                    </div>
                    <i class="bi bi-list-check stat-icon text-danger"></i>
                </div>
            </div>
        </div>

    </div>

    <!-- QUICK ACTIONS -->
    <div class="mt-5">
        <h5 class="mb-3">
            <i class="bi bi-lightning-charge-fill text-warning me-1"></i>
            Quick Actions
        </h5>
        <div class="d-flex flex-wrap gap-2">

            <a asp-controller="Roles" asp-action="Create" class="btn btn-outline-primary">
                <i class="bi bi-plus-circle me-1"></i> Add Role
            </a>

            <a asp-controller="Competences" asp-action="Create" class="btn btn-outline-success">
                <i class="bi bi-lightbulb me-1"></i> Add Competence
            </a>

            <a asp-controller="Admin" asp-action="Users" class="btn btn-outline-secondary">
                <i class="bi bi-people me-1"></i> View Users & Roles
            </a>

        </div>
    </div>
</div>

