@{
    ViewData["Title"] = "Create Competence";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    /* 1. The Container for the split view */
    .create-card {
        border: none;
        border-radius: 24px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.08);
        overflow: hidden; /* Keeps the image inside the rounded corners */
        background-color: #fff;
    }

    /* 2. The Left Side (Image) */
    .image-side {
        background: url('/images/2.jpg'); /* YOUR IMAGE HERE */
        background-size: cover;
        background-position: center;
        min-height: 450px; /* Ensures height even if form is short */
        position: relative;
    }

    /* Optional: A dark overlay on the image so text pops if you want to add text over it */
    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.4));
    }

    /* 3. The Right Side (Form) */
    .form-side {
        padding: 3rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .form-title {
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }

    /* Floating labels tweak */
    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: #0d6efd;
    }

    .form-control:focus {
        border-color: #86b7fe;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
    }
</style>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card create-card">
                <div class="row g-0">

                    <div class="col-md-5 d-none d-md-block image-side">
                        <div class="image-overlay"></div>
                    </div>

                    <div class="col-md-7">
                        <div class="form-side">

                            <div class="mb-4">
                                <h3 class="form-title">Create Competence</h3>
                                <p class="text-muted">Add a new skill or qualification to the system.</p>
                            </div>

                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                    <div>@ViewBag.Error</div>
                                </div>
                            }

                            <form asp-action="Create" asp-controller="Competences" method="post">

                                <div class="form-floating mb-3">
                                    <input name="name" type="text" class="form-control" id="floatingName" placeholder="e.g. C# Programming" required />
                                    <label for="floatingName">Competence Name</label>
                                </div>

                                <div class="form-floating mb-4">
                                    <textarea name="description" class="form-control" placeholder="Describe the skill" id="floatingDesc" style="height: 120px"></textarea>
                                    <label for="floatingDesc">Description (Optional)</label>
                                </div>

                                <div class="d-flex align-items-center gap-2">
                                    <button type="submit" class="btn btn-primary btn-lg px-4 rounded-pill">
                                        <i class="bi bi-check2-circle me-1"></i> Save Competence
                                    </button>

                                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 rounded-pill">
                                        Cancel
                                    </a>
                                </div>

                            </form>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>