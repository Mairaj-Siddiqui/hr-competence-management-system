@{
    ViewData["Title"] = "Create Competence";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
    }

    .create-card {
        border: none;
        border-radius: 30px;
        box-shadow: 0 25px 50px rgba(0,0,0,0.12);
        overflow: hidden;
        background-color: #fff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .create-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 30px 60px rgba(0,0,0,0.15);
        }

    /* Left Side (Image) */
    .image-side {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.9), rgba(118, 75, 162, 0.9)), url('/images/2.jpg');
        background-size: cover;
        background-position: center;
        background-blend-mode: overlay;
        min-height: 600px;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 3rem;
    }

    .image-content {
        text-align: center;
        color: white;
        z-index: 2;
        position: relative;
    }

        .image-content i {
            font-size: 5rem;
            margin-bottom: 1.5rem;
            opacity: 0.95;
        }

        .image-content h2 {
            font-weight: 700;
            font-size: 2.5rem;
            margin-bottom: 1rem;
            text-shadow: 0 2px 10px rgba(0,0,0,0.2);
        }

        .image-content p {
            font-size: 1.1rem;
            opacity: 0.95;
            line-height: 1.6;
        }

    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(circle at 30% 50%, rgba(255,255,255,0.1) 0%, transparent 50%);
        pointer-events: none;
    }

    /* Right Side (Form) */
    .form-side {
        padding: 4rem 3.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .form-title {
        font-weight: 700;
        font-size: 2.2rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 0.5rem;
    }

    .form-subtitle {
        color: #718096;
        font-size: 1.05rem;
        margin-bottom: 2.5rem;
    }

    /* Enhanced Form Controls */
    .form-floating {
        margin-bottom: 1.5rem;
    }

        .form-floating > .form-control {
            border: 2px solid #e2e8f0;
            border-radius: 14px;
            padding: 1.2rem 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .form-floating > .form-control:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.15);
                background-color: #fafbff;
            }

                .form-floating > .form-control:focus ~ label,
                .form-floating > .form-control:not(:placeholder-shown) ~ label {
                    color: #667eea;
                    font-weight: 600;
                }

        .form-floating > label {
            color: #a0aec0;
            padding: 1.2rem 1rem;
        }

    /* Alert Styling */
    .alert {
        border-radius: 14px;
        border: none;
        padding: 1rem 1.25rem;
    }

    .alert-danger {
        background: linear-gradient(135deg, #fee 0%, #fdd 100%);
        color: #c53030;
    }

    /* Button Styling */
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 0.85rem 2rem;
        border-radius: 14px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        }

    .btn-outline-secondary {
        border: 2px solid #e2e8f0;
        color: #718096;
        padding: 0.85rem 2rem;
        border-radius: 14px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .btn-outline-secondary:hover {
            background: #f7fafc;
            border-color: #cbd5e0;
            color: #4a5568;
            transform: translateY(-2px);
        }

    /* Progress Steps */
    .progress-steps {
        display: flex;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 2rem;
        border-bottom: 2px solid #f0f0f0;
    }

    .step {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #a0aec0;
        font-size: 0.9rem;
        font-weight: 500;
    }

        .step.active {
            color: #667eea;
        }

    .step-number {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: #e2e8f0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.85rem;
    }

    .step.active .step-number {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
</style>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-11 col-xl-10">

            <div class="card create-card">
                <div class="row g-0">

                    <!-- Left Side: Image/Illustration -->
                    <div class="col-md-5 d-none d-md-block">
                        <div class="image-side">
                            <div class="image-overlay"></div>
                        </div>
                    </div>

                    <!-- Right Side: Form -->
                    <div class="col-md-7">
                        <div class="form-side">

                            <!-- Progress Steps -->
                            <div class="progress-steps">
                                <div class="step active">
                                    <div class="step-number">1</div>
                                    <span>Details</span>
                                </div>
                            </div>

                            <!-- Header -->
                            <div class="mb-4">
                                <h3 class="form-title">Create Competence</h3>
                                <p class="form-subtitle">Add a new skill or qualification to your system</p>
                            </div>

                            <!-- Error Alert -->
                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                                    <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>
                                    <div>@ViewBag.Error</div>
                                </div>
                            }

                            <!-- Form -->
                            <form asp-action="Create" asp-controller="Competences" method="post">

                                <div class="form-floating">
                                    <input name="name" type="text" class="form-control" id="floatingName"
                                           placeholder="e.g. C# Programming" required />
                                    <label for="floatingName">
                                        <i class="bi bi-tag me-1"></i> Competence Name
                                    </label>
                                </div>

                                <div class="form-floating mb-4">
                                    <textarea name="description" class="form-control"
                                              placeholder="Describe the skill" id="floatingDesc"
                                              style="height: 140px"></textarea>
                                    <label for="floatingDesc">
                                        <i class="bi bi-text-paragraph me-1"></i> Description (Optional)
                                    </label>
                                </div>

                                <div class="d-flex flex-column flex-sm-row gap-3">
                                    <button type="submit" class="btn btn-primary flex-grow-1">
                                        <i class="bi bi-check2-circle me-2"></i>Save Competence
                                    </button>

                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="bi bi-x-circle me-2"></i>Cancel
                                    </a>
                                </div>

                            </form>

                            <!-- Helper Text -->
                            <div class="mt-4 pt-3 border-top">
                                <small class="text-muted d-flex align-items-start">
                                    <i class="bi bi-info-circle me-2 mt-1"></i>
                                    <span>Competences help you track and manage the skills within your organization. They can be assigned to employees and used for performance evaluations.</span>
                                </small>
                            </div>

                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>