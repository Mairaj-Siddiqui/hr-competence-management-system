@model IEnumerable<HRProject.Models.Competence>
@{
    ViewData["Title"] = "Competences";
    var totalCompetences = Model?.Count() ?? 0;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<style>
    .comp-header-bg {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        height: 200px;
        border-radius: 0 0 50px 50px;
        position: relative;
        margin-bottom: 3rem;
        box-shadow: 0 15px 35px rgba(102, 126, 234, 0.3);
        overflow: hidden;
    }

        .comp-header-bg::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 400px;
            height: 400px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
        }

        .comp-header-bg::after {
            content: '';
            position: absolute;
            bottom: -30%;
            left: -5%;
            width: 300px;
            height: 300px;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 50%;
        }

    .comp-header-content {
        position: absolute;
        bottom: 35px;
        width: 100%;
        text-align: center;
        color: #fff;
        z-index: 1;
    }

        .comp-header-content h2 {
            font-weight: 700;
            font-size: 2.5rem;
            text-shadow: 0 2px 8px rgba(0,0,0,0.2);
            margin-bottom: 0.5rem;
        }

        .comp-header-content p {
            font-size: 1.05rem;
            opacity: 0.95;
        }

    .stat-card {
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        border: none;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background: #fff;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.12);
        }

    .stat-icon {
        font-size: 2.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .table-wrapper {
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        overflow: hidden;
        background-color: #fff;
        border: 1px solid #f0f0f0;
    }

    .table-header-section {
        background: linear-gradient(135deg, #f8f9fe 0%, #fdfbff 100%);
        padding: 1.5rem;
        border-bottom: 2px solid #e9ecef;
    }

        .table-header-section h4 {
            margin: 0;
            font-weight: 600;
            color: #2d3748;
        }

    .table thead th {
        background-color: #fafbfc;
        border-bottom: 2px solid #e9ecef;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: .08em;
        color: #6c757d;
        font-weight: 600;
        padding: 1rem;
    }

    .table tbody td {
        padding: 1.2rem 1rem;
        vertical-align: middle;
        border-bottom: 1px solid #f0f0f0;
    }

    .table-hover tbody tr {
        transition: all 0.2s ease;
    }

        .table-hover tbody tr:hover {
            background: linear-gradient(90deg, #f8f9fe 0%, #ffffff 100%);
            transform: scale(1.01);
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
        }

    .id-badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 0.35rem 0.75rem;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.85rem;
        display: inline-block;
        min-width: 45px;
        text-align: center;
    }

    .competence-name {
        font-weight: 600;
        color: #2d3748;
        font-size: 1rem;
    }

    .competence-desc {
        color: #718096;
        font-size: 0.95rem;
        line-height: 1.6;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 0.6rem 1.5rem;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
        }

    .empty-state {
        padding: 4rem 2rem;
        text-align: center;
    }

    .empty-state-icon {
        font-size: 4rem;
        color: #e2e8f0;
        margin-bottom: 1rem;
    }

    .empty-state-text {
        color: #718096;
        font-size: 1.1rem;
    }
</style>

<!-- HEADER -->
<div class="comp-header-bg">
    <div class="comp-header-content">
        <h2><i class="bi bi-award me-2"></i>Competences</h2>
        <p class="mb-0">Manage and organize employee skills and capabilities</p>
    </div>
</div>

<div class="container mb-5">
    <!-- STATS & ACTION ROW -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card stat-card h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="stat-icon me-3">
                        <i class="bi bi-collection-fill"></i>
                    </div>
                    <div>
                        <div class="small text-muted text-uppercase fw-semibold mb-1">
                            Total Competences
                        </div>
                        <div class="stat-number">@totalCompetences</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8 mb-3">
            <div class="card stat-card h-100">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h5 class="mb-1 fw-semibold">Ready to add a new competence?</h5>
                        <p class="text-muted mb-0 small">Expand your skills library</p>
                    </div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Add New Competence
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- TABLE -->
    <div class="table-wrapper">
        <div class="table-header-section">
            <h4><i class="bi bi-list-ul me-2"></i>All Competences</h4>
        </div>
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th style="width:100px;">ID</th>
                    <th style="width:250px;">Competence Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="id-badge">#@item.Id</span>
                            </td>
                            <td>
                                <span class="competence-name">@item.Name</span>
                            </td>
                            <td>
                                <span class="competence-desc">@item.Description</span>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="border-0">
                            <div class="empty-state">
                                <div class="empty-state-icon">
                                    <i class="bi bi-inbox"></i>
                                </div>
                                <div class="empty-state-text">
                                    No competences have been created yet.
                                </div>
                                <div class="mt-3">
                                    <a asp-action="Create" class="btn btn-primary">
                                        <i class="bi bi-plus-circle me-2"></i>Create Your First Competence
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}