@model IEnumerable<HRProject.Models.ProjectManager>

@{
    ViewData["Title"] = "Project Manager";
}

<div class="container-fluid p-5 text-white"
     style="background-image: url('/images/bg-project.jpg'); background-size: cover; background-position: center;">
    <div class="p-5 bg-dark bg-opacity-75 rounded">
        <h1 class="display-4 fw-bold">👥 Project Manager</h1>
        <p class="lead">
            A smart tool to define project needs, match the best people, and build high-performing teams.
        </p>
        <div class="mt-4">
            <a asp-controller="ProjectManager" asp-action="Create"
               class="btn btn-primary btn-lg">
                Create Project
            </a>

            <a asp-controller="ProjectManager" asp-action="Find"
               class="btn btn-outline-light btn-lg">
                Find Team Members
            </a>
        </div>
    </div>
</div>

<div class="container text-center my-5">
    <h2 class="fw-bold">Why This Project Manager Matters</h2>
    <p class="text-muted mt-3">
        Plan projects with precision and build teams based on skills, experience, and availability.
    </p>
</div>

<div class="container mb-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h4>📌 Creating Projects</h4>
                <ul>
                    <li>Define required skills</li>
                    <li>Specify needed roles</li>
                    <li>Select project dates</li>
                    <li>Describe experience level</li>
                </ul>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h4>🔍 Finding Team Members</h4>
                <ul>
                    <li>Ranked candidates</li>
                    <li>Availability timeline</li>
                    <li>Skill comparison</li>
                </ul>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h4>📊 Reports</h4>
                <ul>
                    <li>Export to Excel</li>
                    <li>Matching reports</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<hr class="my-5" />

<!-- ✅ PROJECT LIST SECTION -->
<div class="container mb-5">
    <h2 class="fw-bold mb-4">📋 Saved Projects</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No projects have been created yet.
        </div>
    }
    else
    {
        <table class="table table-hover shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Skills</th>
                    <th>Roles</th>
                    <th>Experience</th>
                    <th>Start</th>
                    <th>End</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    <tr>
                        <td class="fw-bold">@project.Name</td>
                        <td>@project.Skills</td>
                        <td>@project.RolesNeeded</td>
                        <td>@project.ExperienceLevel</td>
                        <td>@project.StartDate.ToShortDateString()</td>
                        <td>@project.EndDate.ToShortDateString()</td>
                        <td>
                            <a asp-action="AssignUser"
                               asp-route-projectId="@project.Id"
                               class="btn btn-sm btn-outline-primary">
                                Assign User
                            </a>

                            <a asp-action="Details"
                               asp-route-id="@project.Id"
                               class="btn btn-sm btn-outline-secondary me-2">
                                Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
