@{
    ViewData["Title"] = "Project Manager";
}

<div class="container-fluid p-5 text-white"
     style="background-image: url('/images/bg-project.jpg'); background-size: cover; background-position: center;">
    <div class="p-5 bg-dark bg-opacity-75 rounded">
        <h1 class="display-4 fw-bold">👥 Project Manager</h1>
        <p class="lead">
            A smart tool to define project needs, match the best people, and build high-performing teams.
        </p>
        <div class="mt-4">
            <a asp-controller="ProjectManager" asp-action="Create"
               class="btn btn-primary btn-lg">
                Create Project
            </a>

            <a asp-controller="ProjectManager" asp-action="Find"
               class="btn btn-outline-light btn-lg">
                Find Team Members
            </a>

        </div>
    </div>
</div>

<div class="container text-center my-5">
    <h2 class="fw-bold">Why This Project Manager Matters</h2>
    <p class="text-muted mt-3">
        Plan projects with precision and build teams based on skills, experience, and availability.
    </p>
</div>

<div class="container">
    <div class="row g-4">

        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h4>📌 Creating Projects</h4>
                <ul>
                    <li>Define required skills</li>
                    <li>Specify needed roles (e.g., 2 devs, 1 designer)</li>
                    <li>Select project dates</li>
                    <li>Describe required experience</li>
                    <li>Working style / personality preferences</li>
                </ul>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h4>🔍 Finding Team Members</h4>
                <ul>
                    <li>Ranked candidates with % match</li>
                    <li>Explanation for match quality</li>
                    <li>Availability timeline</li>
                    <li>Skill maps</li>
                    <li>Alternative suggestions</li>
                    <li>Side-by-side comparison</li>
                </ul>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h4>📊 Reports</h4>
                <ul>
                    <li>Export project requirements to Excel</li>
                    <li>Generate matching reports</li>
                </ul>
            </div>
        </div>

    </div>
</div>
