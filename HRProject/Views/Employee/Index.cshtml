@model IEnumerable<HRProject.Models.ApplicationUser>

@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

@if (User.IsInRole("Admin"))
{
    <div class="mb-3">
        <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
            + Add Employee
        </a>
    </div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Job Title</th>
            <th>Availability</th>
            <th>Languages</th>
            <th>Certificates</th>
            <th>Interests</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.JobTitle</td>
                <td>@user.AvailabilityPercent%</td>
                <td>@user.Languages</td>
                <td>@user.Certificates</td>
                <td>@user.Interests</td>
                <td>
                    <a asp-action="Edit"
                       asp-route-id="@user.Id"
                       class="btn btn-sm btn-warning">
                        Edit
                    </a>

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete"
                           asp-route-id="@user.Id"
                           class="btn btn-sm btn-danger">
                            Delete
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>



 