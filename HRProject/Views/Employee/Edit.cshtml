@model HRProject.Models.ApplicationUser

<h2>Edit Employee</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Full Name</label>
        <input asp-for="FullName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Job Title</label>
        <input asp-for="JobTitle" class="form-control" />
    </div>

    <div class="form-group">
        <label>Availability (%)</label>
        <input asp-for="AvailabilityPercent" class="form-control" type="number" />
    </div>

    <div class="form-group">
        <label>Languages</label>
        <input asp-for="Languages" class="form-control" />
    </div>

    <div class="form-group">
        <label>Certificates</label>
        <input asp-for="Certificates" class="form-control" />
    </div>

    <div class="form-group">
        <label>Interests</label>
        <input asp-for="Interests" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

