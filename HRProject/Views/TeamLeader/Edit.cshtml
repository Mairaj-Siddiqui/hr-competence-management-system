@model HRProject.Models.TeamLeader

<h2>Edit Team</h2>

<form method="post">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Team Name</label>
        <input asp-for="TeamName" class="form-control" />
        <span asp-validation-for="TeamName" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <hr />

    <h4>Edit Required Capacity</h4>

    <div class="form-row d-flex gap-3">

        <div class="form-group">
            <label>Hours</label>
            <input asp-for="RequiredHours" type="number" min="0" class="form-control" />
        </div>

        <div class="form-group">
            <label>Days</label>
            <input asp-for="RequiredDays" type="number" min="0" class="form-control" />
        </div>

        <div class="form-group">
            <label>Months</label>
            <input asp-for="RequiredMonths" type="number" min="0" class="form-control" />
        </div>

    </div>

    <button class="btn btn-primary mt-3">Save Changes</button>

    <a href="/TeamLeader/Dashboard/@Model.Id" class="btn btn-secondary mt-3 ms-2">
        ← Back to Dashboard
    </a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
