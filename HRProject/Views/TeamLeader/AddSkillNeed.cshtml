@model HRProject.Models.TeamSkillNeed
@{
    int teamId = ViewBag.TeamId;
    var competences = ViewBag.Competences as List<HRProject.Models.Competence>;
}

<h2>Add Missing Skill</h2>

<form method="post" action="/TeamLeader/AddSkillNeed">

    <input type="hidden" name="teamId" value="@teamId" />

    <div class="form-group">
        <label>Competence</label>
        <select name="competenceId" class="form-control">
            @foreach (var comp in competences)
            {
                <option value="@comp.Id">@comp.Name</option>
            }
        </select>
    </div>

    <div class="form-group mt-2">
        <label>Level Needed</label>
        <input name="levelNeeded" type="number" class="form-control"
               placeholder="Enter required skill level (1-5)" />
    </div>

    <div class="form-group mt-2">
        <label>Importance</label>
        <select name="importance" class="form-control">
            <option value="Low">Low</option>
            <option value="Medium">Medium</option>
            <option value="High">High</option>
        </select>
    </div>

    <button class="btn btn-primary mt-3">Add Missing Skill</button>

    <!-- NEW BACK BUTTON (OLD 'Cancel' replaced) -->
    <a href="/TeamLeader/Dashboard/@teamId" class="btn btn-secondary mt-3">
        ← Back to Dashboard
    </a>

</form>
