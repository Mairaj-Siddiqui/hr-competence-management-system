@model HRProject.Models.TeamLeader

<h2>Create a New Team</h2>

<form method="post" action="/TeamLeader/Create">

    <div class="form-group">
        <label>Team Name</label>
        <input asp-for="TeamName" class="form-control" placeholder="Write your team name..." />
        <span asp-validation-for="TeamName" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control" placeholder="Describe your team..."></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <hr />

    <h4>Required Capacity</h4>

    <div class="form-row d-flex gap-3">

        <div class="form-group">
            <label>Hours</label>
            <input asp-for="RequiredHours" type="number" min="0" class="form-control" placeholder="0" />
        </div>

        <div class="form-group">
            <label>Days</label>
            <input asp-for="RequiredDays" type="number" min="0" class="form-control" placeholder="0" />
        </div>

        <div class="form-group">
            <label>Months</label>
            <input asp-for="RequiredMonths" type="number" min="0" class="form-control" placeholder="0" />
        </div>

    </div>

    <button class="btn btn-primary mt-3">Create Team</button>

    <!-- BACK BUTTON -->
    <a href="/TeamLeader/Index" class="btn btn-secondary mt-3 ms-2">
        ← Back to My Teams
    </a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
